{
  "appId": "com.hagotchi.app",
  "appName": "Hagotchi",
  "webDir": "dist",
  "ios": {
    "scheme": "Hagotchi",
    "contentInset": "automatic",
    "preferredContentMode": "mobile",
    "backgroundColor": "#0a0a0a",
    "scrollEnabled": true,
    "allowsLinkPreview": false
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 0,
      "backgroundColor": "#0a0a0a",
      "showSpinner": false,
      "launchAutoHide": false
    },
    "LocalNotifications": {
      "smallIcon": "ic_stat_icon",
      "iconColor": "#00ff41",
      "sound": "notification.wav"
    },
    "StatusBar": {
      "style": "DARK",
      "backgroundColor": "#0a0a0a"
    },
    "Keyboard": {
      "resize": "none"
    }
  }
}
